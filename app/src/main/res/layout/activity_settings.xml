<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg__"
    android:fitsSystemWindows="true"
    tools:context=".courses.CourseActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toEndOf="@id/back"
        android:fontFamily="@font/adlam_display"
        android:text="Remove Ads"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adlam_display"
            android:text="Why Ads?"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/adlam_display"
            android:text="Ads are what make this app run. They help cover server costs, development time, and ongoing improvements so we can keep the app free for everyone."
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/adlam_display"
            android:text="Want to remove Ads?"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/adlam_display"
            android:text="1) Copy your unique user ID below."
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/payment_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/adlam_display"
            android:text="2) Send 30 ETB to the following account:\n(Abubeker Shemsu / 0941996273 / Telebirr)."
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/payment_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/adlam_display"
            android:text="3) Take a screenshot of the payment and send it along with your user ID to our Telegram:\n@durusAppSupport."
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/adlam_display"
            android:text="After verification, your account will be whitelisted and ads will be removed."
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:drawableEnd="@drawable/baseline_content_copy_24"
        android:drawablePadding="5dp"
        android:fontFamily="@font/adlam_display"
        android:gravity="center_vertical"
        android:text="UUID"
        android:textColor="@color/white" />
</RelativeLayout>